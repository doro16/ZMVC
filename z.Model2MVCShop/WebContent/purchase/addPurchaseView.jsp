	<style>
 		body {
            padding-top : 50px;
        }
    </style>
     
	<script type="text/javascript">
	
	function fncAddPurchase() {
		$("form").attr("method", "POST").attr("action", "/purchase/addPurchase").submit();
	}
	
	$(function() {
		$( "button:contains('구매')" ).on("click" , function() {
			fncAddPurchase();
		});
		
		$( "button:contains('취소')" ).on("click" , function() {
			history.go(-1);
		});
	});
	
	</script>

